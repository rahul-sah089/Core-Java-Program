package strings;

public class Palindrome1 {
	public static void main(String[] args) {

	}

	public static boolean isPalindrome(String str) {
		int length = str.length();
		if (str == null) {
			return false;
		}
		for (int i = 0; i < str.length(); i++) {
			if (str.charAt(i) != str.charAt(length - i - 1)) {
				return false;
			}
		}
		return true;
	}
}
